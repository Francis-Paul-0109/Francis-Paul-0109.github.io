  <!-- ğŸ”¹ ê³ ì • ì´ë¯¸ì§€ -->
  <div class="hero-fixed">
    <img id="auto-img" src="/assets/images/post/1.ê¸°ë¡ì—ê´€í•´/1. github.png">
  </div>

  <!-- ğŸ”¹ ìŠ¤í¬ë¡¤ í…ìŠ¤íŠ¸ ì˜ì—­ -->
  <div class="scrolly-text">
    {{ content }}
  </div>

  <!-- ğŸ”¹ JS (í˜ì´ë“œ + íƒ€ì´í•‘) -->
  <script>
  document.addEventListener("scroll", function () {
    const steps = document.querySelectorAll(".step");
    const img = document.getElementById("auto-img");

    let index = 0;

    steps.forEach((step, i) => {
      const rect = step.getBoundingClientRect();
      if (rect.top < window.innerHeight * 0.55) index = i;
    });

    const active = steps[index];

    steps.forEach(step => step.classList.remove("active"));
    active.classList.add("active");

    /* ì´ë¯¸ì§€ í˜ì´ë“œ */
    const newImg = active.dataset.img;
    if (newImg) {
      if (img.src.indexOf(newImg) === -1) {
        img.style.opacity = 0;
        setTimeout(() => {
          img.src = `/assets/images/post/1.ê¸°ë¡ì—ê´€í•´/${newImg}`;
          img.style.opacity = 1;
        }, 300);
      }
    }

    /* í…ìŠ¤íŠ¸ íƒ€ì´í•‘ */
    if (!active.dataset.done) {
      const text = active.dataset.text.trim();
      active.innerHTML = "";
      let i = 0;
      active.dataset.done = "true";

      function type() {
        if (i < text.length) {
          active.innerHTML += text[i];
          i++;
          requestAnimationFrame(type);
        }
      }
      type();
    }
  });
  </script>

